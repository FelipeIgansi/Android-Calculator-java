        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Clear"
        app:layout_constraintTop_toBottomOf="@+id/txtPrintResult"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_Multiplication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/style_buttons_operators_clicked"
        android:backgroundTint="@null"
        android:text="@string/btn_Multiplication"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_default"
        app:layout_constraintBottom_toTopOf="@+id/btn_Subtraction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Nine"
