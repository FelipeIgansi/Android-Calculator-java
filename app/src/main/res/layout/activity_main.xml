<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2226"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_ClearEntry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btn_ClearEntry"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_NumOito"
        app:layout_constraintEnd_toStartOf="@+id/btn_Clear"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Percent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_Cinco"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btnNumCinco"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_NumDois"
        app:layout_constraintEnd_toStartOf="@+id/btn_Seis"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_NumQuatro"
        app:layout_constraintTop_toBottomOf="@+id/btn_NumOito" />

    <Button
        android:id="@+id/btn_NumQuatro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btn_Quatro"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_NumUm"
        app:layout_constraintEnd_toStartOf="@+id/btn_Cinco"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Sete" />

    <Button
        android:id="@+id/btn_Seis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btn_NumSeis"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_NumTres"
        app:layout_constraintEnd_toStartOf="@+id/btn_Menos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Cinco"
        app:layout_constraintTop_toBottomOf="@+id/btn_NumNove" />

    <Button
        android:id="@+id/btn_NumNove"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btn_NumNove"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Seis"
        app:layout_constraintEnd_toStartOf="@+id/btn_Multiplica"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_NumOito"
        app:layout_constraintTop_toBottomOf="@+id/btn_Clear" />

    <Button
        android:id="@+id/btn_Ponto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btnPonto"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_Result"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_NumZero"
        app:layout_constraintTop_toBottomOf="@+id/btn_NumTres" />

    <Button
        android:id="@+id/btn_NumOito"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btn_NumOito"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Cinco"
        app:layout_constraintEnd_toStartOf="@+id/btn_NumNove"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Sete"
        app:layout_constraintTop_toBottomOf="@+id/btn_ClearEntry" />

    <Button
        android:id="@+id/btn_NumTres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btn_NumTres"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Ponto"
        app:layout_constraintEnd_toStartOf="@+id/btn_Soma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_NumDois"
        app:layout_constraintTop_toBottomOf="@+id/btn_Seis" />

    <Button
        android:id="@+id/btn_Divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btnDivide"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Multiplica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Clear"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_Multiplica"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btn_Multiplica"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Menos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_NumNove"
        app:layout_constraintTop_toBottomOf="@+id/btn_Divide" />

    <Button
        android:id="@+id/btn_NumUm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btnNumUm"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_InverteSinal"
        app:layout_constraintEnd_toStartOf="@+id/btn_NumDois"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_NumQuatro" />

    <Button
        android:id="@+id/btn_Percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btn_Percent"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Sete"
        app:layout_constraintEnd_toStartOf="@+id/btn_ClearEntry"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_Soma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btnSoma"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_NumTres"
        app:layout_constraintTop_toBottomOf="@+id/btn_Menos" />

    <Button
        android:id="@+id/btn_Menos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btnMenos"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_Soma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Seis"
        app:layout_constraintTop_toBottomOf="@+id/btn_Multiplica" />

    <Button
        android:id="@+id/btn_NumDois"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btn_NumDois"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_NumZero"
        app:layout_constraintEnd_toStartOf="@+id/btn_NumTres"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_NumUm"
        app:layout_constraintTop_toBottomOf="@+id/btn_Cinco" />

    <Button
        android:id="@+id/btn_InverteSinal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btnInverteSinal"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_NumZero"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_NumUm" />

    <Button
        android:id="@+id/btn_Sete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btn_NumSete"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_NumQuatro"
        app:layout_constraintEnd_toStartOf="@+id/btn_NumOito"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Percent" />

    <Button
        android:id="@+id/btn_NumZero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/botao_numeros"
        android:backgroundTint="@null"
        android:text="@string/btnNumZero"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_Ponto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_InverteSinal"
        app:layout_constraintTop_toBottomOf="@+id/btn_NumDois" />

    <Button
        android:id="@+id/btn_Result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btn_Result"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Ponto"
        app:layout_constraintTop_toBottomOf="@+id/btn_Soma" />

    <Button
        android:id="@+id/btn_Clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/botao_operacoes"
        android:backgroundTint="@null"
        android:text="@string/btn_Clear"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_NumNove"
        app:layout_constraintEnd_toStartOf="@+id/btn_Divide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_ClearEntry"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/mostra_resultado"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:paddingTop="100dp"
        android:paddingEnd="15dp"
        android:text="@string/mostra_operaces"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>